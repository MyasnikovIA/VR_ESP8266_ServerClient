void setupWiFiAP() {
  Serial.println("Setting up Access Point...");
  
  WiFi.mode(WIFI_AP);
  
  // –ö–æ–Ω–≤–µ—Ä—Ç–∏—Ä—É–µ–º –ø–æ–¥—Å–µ—Ç—å –≤ —á–∏—Å–ª–æ
  int subnet = networkSettings.subnet.toInt();
